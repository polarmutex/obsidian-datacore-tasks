{
  "name": "obsidian-datacore-kanban",
  "version": "1.0.0",
  "description": "Dynamic kanban board with Datacore and Tasks integration for Obsidian",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "node esbuild.config.mjs --production",
    "lint": "eslint src/",
    "check": "tsc --noEmit",
    "clean": "rm -rf main.js main.js.map",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "kanban",
    "datacore",
    "tasks",
    "productivity"
  ],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "@blacksmithgu/datacore": "^0.1.24",
    "@testing-library/jest-dom": "^6.6.3",
    "js-yaml": "^4.1.0",
    "obsidian": ">=0.15.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "obsidian": "latest",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "obsidian": ">=0.15.0"
  }
}
